# Informix Database Configuration
# Copy this file to .env and fill in your actual values

# Database server hostname or IP address
INFORMIX_HOST=informixhost

# Database server port
INFORMIX_PORT=9999

# Database name
INFORMIX_DATABASE=informixdatabase

# Database username
INFORMIX_USER=informixuser

# Database password
INFORMIX_PASSWORD=informixpassword

# Informix server name
INFORMIX_SERVER=informixserver

# ODBC Driver name (check your ODBC configuration for exact name)
# Common values: "IBM INFORMIX ODBC DRIVER", "Informix", "IBM Informix"
INFORMIX_ODBC_DRIVER=IBM INFORMIX ODBC DRIVER

# Connection pool settings
INFORMIX_POOL_MIN=2
INFORMIX_POOL_MAX=10

# Client locale (optional)
INFORMIX_CLIENT_LOCALE=en_US.utf8

# Database locale (optional)
INFORMIX_DB_LOCALE=en_US.utf8

# Service host port (host:container)
INFORMIX_SERVICE_PORT=4000
